<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder><pattern>%d{ISO8601, UTC} %boldCyan(%-32.-32thread) %boldGreen(%-15.-15logger{0}) %-6level %msg%n</pattern></encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>